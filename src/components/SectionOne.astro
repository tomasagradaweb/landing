---
// SeccionImagenResponsive.astro
import { Image } from 'astro:assets';
import shopifyImage from '@assets/home/agencia-especializada-shopify.webp';
import shopifyPartner from '@assets/home/shopify-partner.webp';
---

<section 
  class="relative h-screen bg-cover bg-center bg-no-repeat" 
  style={`background-image: url(${shopifyImage.src});`}>
  {/* Contenedor de fondo oscuro que envuelve todo el contenido */}
  <div class="absolute inset-0 bg-black bg-opacity-60 flex flex-col">

    {/* Secci√≥n de contenido principal */}
    <div class="flex flex-col justify-center h-full px-6 sm:pl-10 min-h-[300px]">
      <h1 
        class="text-5xl sm:text-4xl md:text-5xl font-bold max-w-2xl text-white leading-tight min-h-[120px] font-montserrat">
        LIBERA EL POTENCIAL DE TU E-COMMERCE CON NUESTRA AGENCIA DE DESARROLLO EN SHOPIFY
      </h1>
      <p 
        class="text-lg sm:text-xl max-w-2xl pt-2 text-gray-200 leading-relaxed min-h-[80px] roboto-regular font-roboto">
        Aumenta las ventas de tu tienda online creando experiencias personalizadas para tu cliente
      </p>
      {/* Imagen de Shopify Partner */}
      <Image 
        src={shopifyPartner}
        alt="Partner en Shopify"
        width={300}
        height={200}
        class="mt-4"
      />
      <a href="https://www.sortlist.com/agency/highdatanet-agencia-de-marketing-digital" class="md:pb-5" style="display:inline-block; width:210px; height:60px;" target="_blank" rel="nofollow">
        <img src="https://core.sortlist.com//_/apps/core/images/badges-en/badge-stars-blue-light-xl.svg" alt="Agencia de desarrollo en shopify"/>
      </a>
    </div>
  </div>
</section>
